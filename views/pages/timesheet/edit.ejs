<h2>Edit My Timesheet</h2>
<form method="post" action="/timesheetUpdate/<%= timesheet.id %>">
    
  <div class="form-group row">
    <div class="col-sm-10">
        <label>Type</label>
        <input type="text" name="type" class="form-control" disabled value="<%= timesheet.clock_in_out_type %>">
    </div>
  </div> 
  
  <div class="form-group row">
    <div class="col-sm-10">
        <label>Date</label>
        <input type="date" name="date" class="form-control" disabled value="<%= timesheet.clock_in_out_date %>">
    </div>
  </div>   
  
  <div class="form-group row">
      <div class="col-sm-10">
          <label>Time</label>
          <input type="time" name="time" class="form-control" value="<%= timesheet.clock_in_out_time %>">
      </div>
    </div>  

    <div class="form-group row">
        <div class="col-sm-10">
            <label>Notes</label>
            <textarea name="notes" class="form-control" value="<%= timesheet.notes %>"></textarea>
        </div>
    </div>

    <br />
    <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/timesheetIndex/" class="btn btn-danger">Cancel</a>
        </div>
      </div>
</form>